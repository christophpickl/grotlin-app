<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:a="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context=".LoginActivity"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:paddingLeft="@dimen/activity_horizontal_margin"
            a:paddingRight="@dimen/activity_horizontal_margin"
            a:paddingTop="@dimen/activity_vertical_margin"
            a:paddingBottom="@dimen/activity_vertical_margin"
            >
    <LinearLayout a:layout_width="match_parent"
                  a:layout_height="wrap_content"
                  a:orientation="vertical"
                  >
        <ImageView a:id="@+id/imgLogo"
                   a:src="@drawable/logo_big"
                   a:layout_width="wrap_content"
                   a:layout_height="wrap_content"
                   a:paddingBottom="30dp"
                   a:layout_gravity="center_horizontal"
            />
        <LinearLayout a:layout_width="fill_parent"
                      a:layout_height="wrap_content"
                      a:orientation="horizontal">
            <TextView a:text="Username: "
                      a:layout_width="wrap_content"
                      a:layout_height="wrap_content"
                />
            <EditText a:id="@+id/inpUsername"
                      a:layout_width="fill_parent"
                      a:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout a:layout_width="fill_parent"
                      a:layout_height="wrap_content"
                      a:orientation="horizontal"
            >
            <TextView a:text="Password: "
                      a:layout_width="wrap_content"
                      a:layout_height="wrap_content"
                />
            <EditText a:id="@+id/inpPassword"
                      a:password="true"
                      a:layout_width="fill_parent"
                      a:layout_height="wrap_content"
                />
        </LinearLayout>
        <Button a:id="@+id/btnLogin"
                a:text="Login"
                style="@style/MainButtonStyle"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_marginTop="10pt"
                a:layout_marginBottom="6pt"
                a:layout_gravity="center_horizontal"
            />
        <TextView a:text="Forgot Password?"
                  a:id="@+id/btnForgotPassword"
                  a:clickable="true"
                  a:layout_marginTop="2pt"
                  a:textColor="@color/blue_standard"
                  a:layout_width="wrap_content"
                  a:layout_height="wrap_content"
                  a:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</ScrollView>